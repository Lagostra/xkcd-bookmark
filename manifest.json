{
    "manifest_version": 2,
    "name": "xkcd-bookmark",
    "version": "1.1.1",

    "description": "Remembers which xkcd strips you have read, and adds a button to take you to where you left off.",

    "permissions": [
        "storage"
    ],
    
    "content_scripts": [
        {
            "matches": ["*://*.xkcd.com/*"],
            "js": ["bookmark.js"]
        }
    ],

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "xkcd-bookmark@andreassen.info"
        }
    }
}